<h1 class='text-center'>Todo List</h1><br>

<%= link_to new_todo_path, class: 'btn btn-success btn-lg float-end', data: { turbo_frame: dom_id(Todo.new) } do %>
  <i class='bi bi-plus'></i> New
<% end %>
<br>
<br>
<br>


<div class='list'>
  <%= turbo_frame_tag dom_id(Todo.new) %>

  <%= turbo_stream_from 'todos' %>

  <%= turbo_frame_tag 'todos' do %>
    <%= render @todos %>
  <% end %>
</div>
